<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>dss</display-name>
	<servlet>
    	<servlet-name>dss Service</servlet-name>
    	<servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    	<init-param>
      		<param-name>com.sun.jersey.config.property.packages</param-name>
      		<param-value>dss/</param-value> <!-- /clientserverinterface -->
    	</init-param>
    	<load-on-startup>1</load-on-startup>
  	</servlet>
  	<servlet-mapping>
    	<servlet-name>dss Service</servlet-name>
    	<url-pattern>/rest/*</url-pattern>
  	</servlet-mapping>
  
  	<servlet>
    	<display-name>Login</display-name>
    	<servlet-name>LoginServlet</servlet-name>
    	<servlet-class>dss.servlet.LoginServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
   		<servlet-name>LoginServlet</servlet-name>
    	<url-pattern>/login</url-pattern>
  	</servlet-mapping>
  	<servlet>
    	<display-name>Register</display-name>
    	<servlet-name>RegisterServlet</servlet-name>
    	<servlet-class>dss.servlet.RegisterServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
    	<servlet-name>RegisterServlet</servlet-name>
    	<url-pattern>/register</url-pattern>
  	</servlet-mapping>
  	<servlet>
    	<display-name>Logout</display-name>
    	<servlet-name>LogoutServlet</servlet-name>
    	<servlet-class>dss.servlet.LogoutServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
  	 	<servlet-name>LogoutServlet</servlet-name>
  	  	<url-pattern>/logout</url-pattern>
  	</servlet-mapping>
  	<servlet>
  		<display-name>Modify</display-name>
  		<servlet-name>ModifyServlet</servlet-name>
  		<servlet-class>dss.servlet.ModifyServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
  		<servlet-name>ModifyServlet</servlet-name>
  		<url-pattern>/modify</url-pattern>
  	</servlet-mapping>
  
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
</web-app>
